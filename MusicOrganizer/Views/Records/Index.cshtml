@using MusicOrganizer.Models;
@{
  Layout = "_Layout";
}

<h1 class="jumbotron">Records</h1>

@if (@Model.Count == 0)
{
  <h3>No records have been added yet!</h3>
} 

@foreach (Record record in Model)
{
  <h3><a href='/records/@record.Id'>@record.Title</a></h3>
}

<p><a href='/'>Back home</a></p>
<form action="/records/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>